{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "scripts": {
    "release": "lerna publish --include-merged-tags",
    "bump": "lerna version --no-push",
    "local-canary": "git commit -a --no-verify -m WIP && lerna publish --canary --yes --no-git-tag-version --no-push --registry=http://localhost:4873 && git reset HEAD^",
    "local-publish": "lerna exec -- npm publish --registry=http://localhost:4873",
    "local-unpublish": "lerna exec -- npm unpublish -f --registry=\"http://localhost:4873/\" \"\\${LERNA_PACKAGE_NAME}\""
  }
}
